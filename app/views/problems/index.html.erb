<h1>Listing problems</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Sampleinput</th>
    <th>Sampleoutput</th>
    <th>Inputfile</th>
    <th>Outputfile</th>
    <th>Label</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @problems.each do |problem| %>
  <tr>
    <td><%= problem.name %></td>
    <td><%= problem.description %></td>
    <td><%= problem.sampleInput %></td>
    <td><%= problem.sampleOutput %></td>
    <td><%= problem.inputFile %></td>
    <td><%= problem.outputFile %></td>
    <td><%= problem.Label %></td>
    <td><%= link_to 'Show', problem %></td>
    <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
    <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

